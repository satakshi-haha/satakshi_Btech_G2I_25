//program to enter any operand and operate it.
#include <stdio.h>
int main()
{
    int a,b,r;
    char op;
    printf("Enter any 2 numbers:\n");
    scanf("%d%d",&a,&b);
    printf("Enter any operator:\n");
    scanf(" %c",&op);
    switch(op)
    {
        case '+': r=a+b;
        printf("addition: %d ",r);
        break;
        
        case '-': r=a-b;
        printf("subtraction: %d ",r);
        break;
        
        case'*': r=a*b;
        printf("multipication: %d ",r);
        break;
        
        case'/': r=a/b;
        printf("division: %d ",r);
        break;
        
        case'%': r=a%b;
        printf("modulous: %d ",r);
        break;
        
        default:  printf("wrong choice");
    }
    
    return 0;
}
